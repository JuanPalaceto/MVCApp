@model MiSitioWeb.Models.Contacto
@{
    ViewBag.Title = "Contacto";
}

<div class="container content-area">
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>

    <div class="p-5 bg-light rounded">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Nombre, "Nombre")
                    @Html.TextBoxFor(m=>m.Nombre, new { @class = "form-control"} )
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Email, "Email")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" } )
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m=>m.Asunto, "Asunto")
                    @Html.TextBoxFor(m => m.Asunto, new { @class = "form-control" } )
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Mensaje, "Mensaje")
                    @Html.TextBoxFor(m => m.Mensaje, "Mensaje", new { @class = "form-control" } )
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
    </div>
</div>